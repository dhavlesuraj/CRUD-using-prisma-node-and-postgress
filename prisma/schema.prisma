// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user{
  id Int @id @default(autoincrement())
  name String?
  email String @unique
  password String?
  post post[]
  comment comment[]
  created_at DateTime 
}
model post{
  id Int @id @default(autoincrement())
  user user @relation(fields: [user_id],references: [id], onDelete: Cascade)
  user_id Int
  title String
  description String
  comment_count Int @default(0)
  created_at DateTime 
  comment comment[]
}

model comment{
  id Int @id @default(autoincrement())
  post post @relation(fields: [post_id],references: [id],onDelete: Cascade)
  post_id Int
  user user @relation(fields: [user_id],references: [id],onDelete: Cascade)
  user_id Int
  comment String
  created_at DateTime

}



model logg{
  id Int @id @default(autoincrement())
  request String?
  response String?
  route String?
  created_at DateTime
  taken_time Float
  more_data String?
  method String?
}



